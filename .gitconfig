[user]
    name = Alex Wood
    email = awood@redhat.com

[core]
    pager = cat
    excludesfile = ~/.gitignore

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto

[alias]
    graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short
    ctags = !.git/hooks/ctags
    oldest-ancestor = !bash -c 'diff --old-line-format='' --new-line-format='' <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | head -1' -
    branchdiff = !sh -c 'git diff `git oldest-ancestor master $1`..$1' -
    visual-branchdiff = !sh -c 'git diff --name-only `git oldest-ancestor master $1`..$1 | xargs diffuse -s -r `git oldest-ancestor master $1`' -

[sendemail]
    smtpserver = smtp.corp.redhat.com
    from = awood@redhat.com

[merge]
    tool = diffuse

[init]
    templatedir = ~/.git_template

[push]
    default = tracking
